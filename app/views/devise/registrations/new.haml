.row
  .col-md-3
  .col-md-6
    .well.tac
      %h2 Sign Up
      %br
      = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
        = devise_error_messages!
        %p= f.email_field :email, :autofocus => true, :placeholder => 'e-mail address'
        %p= f.password_field :password, :placeholder => 'Password'
        %p= f.password_field :password_confirmation, :placeholder => 'Confirm password'
        %br
        %p By signing up you accept our
        %p= link_to 'Private Beta Terms of Service', '/tos'
        %br
        %p= f.submit "Sign up"

      = render "devise/shared/links"
  .col-md-3
